  <%- include('../include/SignUpSick.ejs') %>
  <div>
    <div class="row mt-2 p-4 flex mb-0 " >
      <!-- offconvass side bar  hamburger Button-->
       <div class="col-2 mx-1">
          <a class="btn btn-primary" data-bs-toggle="offcanvas"  href="#offcanvasExample" role="button"
          aria-controls="offcanvasExample"
          <% if (IsDoctor) { %>
            style='display:block'> 
           <% } else { %>
            style='display:none'> 
            <% } %>
          
           <span class="fa fa-bars hamburger"></span>
          </a>
       </div> 
        <!--list sick  -->
        <div class="col-8 mx-4">
         <table id="ListSickTable"  class="table  mx-2  align-middle table-sm table-bordered table-hover table-striped table-primary p-2 mt-1 m-4">
           <thead id="ff" class="table-light">
          <tr id="gg" class="table-primary">
              <th id="h" scope="col"  onclick="sortTable(0)" >نام</th>
              <th id="g" scope="col"  onclick="sortTable(1)">موبایل</th>
              <th id="hh" scope="col" onclick="sortTable(2)" >کد ملی</th>
          </tr>
           </thead>
             <tbody>
          <% let Iid=0 %>
                  <% if (Object.keys(SickList).length === 0) { %>
                    <h4 class="text-center text-danger">جستجوی بدون نتیجه قابل نمایش!</h4>
                  <% } else {%>
                    <h4 class="text-center text-danger">برای انتخاب روی نام بیمار کلیک نمایید</h4>
                    <% SickList.forEach(Person=> { %>
                            <% Iid++ %>
                                          <tr id="<%= Iid  %>" class="" onclick="SelctSick(this)" >
                                            <td id="tdFullName">
                                                <%= Person.FullName %>
                                            </td>
                                            <td id="tdmobileId" class="m-0 p-0">
                                                <%= Person.mobileId %>
                                            </td>
                                            <td id="tdcodemilli">
                                                <%= Person.codemilli %>
                                            </td>
                                        </tr>
                    <% }) %>     
                  <% } %>
         
             </tbody>
         </table>
        </div> 
      
    </div>
      <!-- offcanvass  menu  dettails-->
