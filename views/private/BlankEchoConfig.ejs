<!DOCTYPE html>
<html lang="fa">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/stylePrj/echolistofday.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/loaders.css/0.1.2/loaders.min.css" />
    <link rel="stylesheet" href="/css/stylePrj/BlankEchoConfig.css"> 
</head>
<body dir="rtl">

    <div class="align-self-center col-4 mt-2">
        <h1 class="text-center bg-primary rounded-5 border-2 text-light farsi-text">تنظیمات اکو</h1>
    </div>
    <form>
        <% 
           let bodyFont="";
           let bodyFontSize="";
           let reportTitle=""  ;
           let reportFooter="";
           let finalFont="";
           let finalFontSize="";
            if (config) { 
              bodyFont = config.bodyFont; 
              bodyFontSize = config.bodyFontSize;
              reportTitle= config.reportTitle;
              reportFooter= config.reportFooter;
              finalFont =config.finalFont;
              finalFontSize = config.finalFontSize;
            }
        %>
        <div class="form-group d-flex align-items-center">
            <label for="bodyFont" class="mr-2">انتخاب فونت اصلی گزارش:</label>
            <select id="bodyFont" name="bodyFont" required onclick="updateSampleText('sampleMain', this.value)">
                <option value="">--انتخاب فونت--</option>
                <option value="Arial" <% if (bodyFont === 'Arial') { %> selected <% } %> >Arial</option>
                <option value="Times New Roman" <% if (bodyFont === 'Times New Roman') { %> selected <% } %>>Times New Roman</option>
                <option value="Courier New" <% if (bodyFont === 'Courier New') { %> selected <% } %>>Courier New</option>
                <option value="Georgia" <% if (bodyFont === 'Georgia') { %> selected <% } %>>Georgia</option>
                <option value="Verdana" <% if (bodyFont === 'Verdana') { %> selected <% } %>>Verdana</option>
                <option value="sans-serif" <% if (bodyFont === 'sans-serif') { %> selected <% } %>>sans-serif</option>
            </select>
            
            <label for="bodyFontSize" class="mr-2 ml-4">اندازه فونت:</label>
            <select id="bodyFontSize" name="bodyFontSize" required onclick="updateSampleTextFontSize('sampleMain', this.value)">
                <option value="">-- اندازه فونت--</option>
                <option value="6" <% if (bodyFontSize === '6') { %> selected <% } %> >6px</option>
                <option value="7" <% if (bodyFontSize === '7') { %> selected <% } %>>7px</option>
                <option value="8" <% if (bodyFontSize === '8') { %> selected <% } %>>8px</option>
                <option value="9" <% if (bodyFontSize === '9') { %> selected <% } %>>9px</option>
                <option value="10" <% if (bodyFontSize === '10') { %> selected <% } %>>10px</option>
                <option value="12" <% if (bodyFontSize === '12') { %> selected <% } %>>12px</option>
                <option value="14" <% if (bodyFontSize === '14') { %> selected <% } %>>14px</option>
                <option value="16" <% if (bodyFontSize === '16') { %> selected <% } %>>16px</option>
                <option value="18" <% if (bodyFontSize === '18') { %> selected <% } %>>18px</option>
                <option value="20" <% if (bodyFontSize === '20') { %> selected <% } %>>20px</option>
            </select>
            
        </div>
        <div id="sampleMain" class="sample-text ml-3">This is Test Echo Report</div>
        
        <div class="form-group">
            <label for="reportTitle">عنوان گزارش (در دو خط):</label>
            <textarea spellcheck="false" id="reportTitle" value="<%= reportTitle  %>" name="reportTitle" placeholder="عنوان گزارش را وارد کنید (نمایش در سربرگ بالای گزارش)" rows="2" required> <%= reportTitle %></textarea>
        </div>
        
        <div class="form-group">
            <label for="reportFooter">قسمت امضا</label>
            <textarea spellcheck="false" id="reportFooter" name="reportFooter" placeholder="مثلا نام دکتر به لاتین یا فارسی..." rows="1" required><%= reportFooter %></textarea>
        </div>
        
        <div class="form-group d-flex align-items-center">
            <label for="finalFont">انتخاب فونت نتیجه نهایی:</label>
            <select id="finalFont" name="finalFont" required  onclick="updateSampleText('sampleFinal', this.value)">
                <option value="">--انتخاب فونت--</option>
                <option value="parastoo" <% if (finalFont === 'parastoo') { %> selected <% } %> >parastoo</option>
                <option value="Satisfy" <% if (finalFont === 'Satisfy') { %> selected <% } %> >Satisfy</option>
                <option value="Tomatoes-O8L8" <% if (finalFont === 'Tomatoes-O8L8') { %> selected <% } %> >Tomatoes-O8L8</option>
                <option value="BYekan" <% if (finalFont === 'BYekan') { %> selected <% } %> >BYekan</option>
                <option value="Roboto" <% if (finalFont === 'Roboto') { %> selected <% } %> >Roboto</option>
                <option value="ReenieBeanie" <% if (finalFont === 'ReenieBeanie') { %> selected <% } %> >ReenieBeanie</option>
                <option value="Arial" <% if (finalFont === 'Arial') { %> selected <% } %> >Arial</option>
                <option value="Times New Roman" <% if (finalFont === 'Times New Roman') { %> selected <% } %> >Times New Roman</option>
                <option value="Courier New" <% if (finalFont === 'Courier New') { %> selected <% } %> >Courier New</option>
                <option value="Georgia" <% if (finalFont === 'Georgia') { %> selected <% } %> >Georgia</option>
                <option value="Verdana" <% if (finalFont === 'Verdana') { %> selected <% } %>>Verdana</option>
                <option value="sans-serif" <% if (finalFont === 'sans-serif') { %> selected <% } %>>sans-serif</option>
            </select>
            <label for="finalFontSize" class="mr-2 ml-4">اندازه فونت:</label>
            <select id="finalFontSize" name="finalFontSize" required onclick="updateSampleTextFontSize('sampleFinal', this.value)">
                <option value="">-- اندازه فونت--</option>
                <option value="8" <% if (finalFontSize === '8') { %> selected <% } %> >8px</option>
                <option value="9" <% if (finalFontSize === '9') { %> selected <% } %>>9px</option>
                <option value="10" <% if (finalFontSize === '10') { %> selected <% } %>>10px</option>
                <option value="12" <% if (finalFontSize === '12') { %> selected <% } %>>12px</option>
                <option value="14" <% if (finalFontSize === '14') { %> selected <% } %>>14px</option>
                <option value="16" <% if (finalFontSize === '16') { %> selected <% } %>>16px</option>
                <option value="18" <% if (finalFontSize === '18') { %> selected <% } %>>18px</option>
                <option value="20" <% if (finalFontSize === '20') { %> selected <% } %>>20px</option>
            </select>
        </div>
        <div id="sampleFinal" class="sample-text">This is a Final Report</div>
        
        <button class="mt-2" type="button" onclick="seaveEchoConfig(event)">ذخیره تنظیمات</button>
    </form>
    

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

    <!--🔻 needs for persiancallender -->
    <script src="/parsianCallender/dist/mds.bs.datetimepicker.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue@2"></script>
    <!--abave🔺  needs for persiancallender -->
    <script src="/jsPrj/BlankEchoReport.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/jsPrj/BlankEchoConfig.js"></script>
</body>

</html>