<body class="rtl">
  <!-- card doctor section -->
  <div class="container mt-2 mb-5 py-0">
    <div class="row border ">
      <section class=" col-sm-4 offset-sm-4">
        <div class="card testimonial-card mt-2 mb-3">
          <div class="card-up aqua-gradient"></div>
          <div class="avatar mx-auto white">
            <img src="/uploads/<%= doctor.mobileId %>/<%= doctor.doctorPicture %>"
             class="rounded-circle img-fluid" 
            onerror="this.src='/assets/AltPictureDoctor.jpg'" />
          </div>
          <div class="card-body text-center">
            <h4 class="card-title text-center font-weight-bold"><%- doctor.FullName  %></h4>
            <h5 class="card-text text-center"><%- doctor.takhasos %></h5>
          </div>
        </div>
      </section>
    </div>
  </div>
  <!-- create nobat -->
  <form class="form"  >
    <div class="container text-center">
      <h1 class=" text-center font-weight-bold 
       border-0 border-bottom border-secondary 
       text-bg-primary text-light
       ">ایجاد نوبت ویزیت</h1>
    </div>
    <div class="container">
      <!-- from date to date -->
      <div class="input-group mb-3 mt-3 ">
        <span class="input-group-text" id="dtp1">📅</span>
        <input type="text" class="form-control" placeholder="از تاریخ..." data-name="dtp1text" name="aztarekh" id="aztarekh" readonly>
        <hr class="m-2">
        <span class="input-group-text" id="dtp2">📅</span>
        <input type="text" class="form-control" placeholder="تا تاریخ ..." data-name="dtp2text" name="tatarekh" id="tatarekh" readonly>
      </div>
      <!-- monday afternon -->
      <div class="container border border-success bg-light">
        <div class="input-group mb-3 mt-2 p-3 justify-content-around">
          
          <div class="form-check">
            <input class="form-check-input border-dark" type="radio" name="monday" id="monday" checked
                   onclick="mondyAfter(this)">
            <label class="form-check-label" for="monday">
              نوبت صبح
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input border-dark" type="radio" name="afternon" id="afternon" 
                   onclick="mondyAfter(this)">
            <label class="form-check-label" for="afternon">
              نوبت عصر
            </label>
          </div>
        </div>
      </div>
      <!-- NobatInternet or nein? -->
      <div class="container border border-danger bg-light mt-1 ">
        <div class="input-group mb-3 mt-2 p-3 justify-content-around">
          
          <div class="form-check">
            <input class="form-check-input border-dark" type="radio" name="NobatHozori" id="NobatHozori" 
                   onclick="NobatHozeriClk(this)">
            <label class="form-check-label" for="monday">
              نوبت حضوری
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input border-dark" type="radio" name="NobatInterneti" id="NobatInterneti" checked
                   onclick="NobatHozeriClk(this)">
            <label class="form-check-label" for="NobatInterneti">
              نوبت اینترنتی
            </label>
          </div>
        </div>
      </div>
      <!-- az saat ta saat -->
      <div class="container mt-2 border border-info bg-light ">
        <div class="input-group mt-2 mb-2 justify-content-between justify-content-md-center gap-md-2">
           <div class="col-md-8 col-lg-3">
              <label class="mt-2 form-label text-primary" for="asssat">از ساعت</label>
              <input class="input-group-text border-success rounded   p-0" type="text" name="azsaat" id="azsaat"
                 placeholder="10:30">
           </div>
           <div col-md-8 col-lg-3>
              <label class="mt-2 form-label text-primary" for="tassat">تا ساعت</label>
              <input class="input-group-text border-success rounded p-0 " type="text" name="tasaat" id="tasaat" placeholder="13:21">
           </div>
        </div>
      </div>
      <!--tedad facel time -->
      <div class="container mt-2 border border-secondary bg-light ">
        <div class="input-group mt-2 mb-2 justify-content-between justify-content-md-center align-content-lg-center gap-md-2">
          <div class="col-md-8 col-lg-3 m-0 p-0">
            <label class="mt-2 form-label text-primary p-0 " for="asssat">فاصله</label>
            <input class="input-group-text border-success  rounded   p-0" type="text" name="interval" id="interval" 
             placeholder="مثال هر 10 دقیقه...">
          </div>
          <div class="col-md-8 col-lg-2 m-0 p-0">
            <label class="mt-2 form-label text-primary" for="tedad">تعداد</label>
            <input class="input-group-text border-success rounded p-0 " type="text" name="tedad" id="tedad" readonly>
          </div>
        </div>
      </div>
      <!--submitBut  -->
      <div class="container mt-2 border border-success bg-light">
        <div class="row justify-content-center">
          <label id="sendStatus" for="" class="label-identifydoctors p-2 m-2 col-8" ></label>
          <button  type="button" class="btn  btn-success col-4 p-2 m-3" 
            onclick="AjaxCreateThisNobat()"> ایجاد نوبت
          </button>
          <div id="progressDiv" style="display: none">
            <div class="progress">
                <div id="progressBar" class="progress-bar progress-bar-striped progress-bar-animated"
                    role="progressbar" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
        </div>
      </div>
    </div>
  </form>
  </div>
