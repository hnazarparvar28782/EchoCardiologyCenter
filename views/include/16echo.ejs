<div class="accordion mt-1" id="accordionEcho16">
    <% data16.forEach((item, index) => { %>
        <div class="accordion-item">
            <h2 class="accordion-header" id="heading<%= index %>">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= index %>echo16" aria-expanded="true" aria-controls="collapse<%= index %>echo16">
                    <img src="/assets/cardiparvand.png" alt="Icon" style="width: 30px;height: 30px;margin-right: 5px;" class="icon-small"> <%= item.title %>
                    <%= item.title %>
                </button>
            </h2>
            <div id="collapse<%= index %>echo16" class="accordion-collapse collapse" aria-labelledby="heading<%= index %>" data-bs-parent="#accordionEcho16">
                <div class="accordion-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Select</th>
                                <th>Stage</th>
                                <th>Definition</th>
                                <th>Valve Anatomy</th>
                                <th>Valve Hemodynamics</th>
                                <th>Associated Clinical Findings</th>
                                <th>Symptoms</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% item.parameters.forEach(parameter => { %>
                                <tr>
                                    <td><input type="checkbox" name="select"></td>
                                    <td data-label="Stage"><%= parameter.stage %></td>
                                    <td data-label="Definition"><%= parameter.definition %></td>
                                    <td data-label="Valve Anatomy"><%= parameter.valve_anatomy %></td>
                                    <td data-label="Valve Hemodynamics"><%= parameter.valve_hemodynamics %></td>
                                    <td data-label="Associated Clinical Findings" style="font-size:10px;font-weight: bold;"><%= parameter.associated_clinical_findings %></td>
                                    <td data-label="Symptoms"><%= parameter.symptoms %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    <% }) %>
</div>